      <complexContent>
         <extension base="rg:org-radargun-service-infinispan-embedded-service">
            <sequence maxOccurs="1" minOccurs="1">
               <element maxOccurs="1" minOccurs="0" name="batching" type="rg:boolean">
                  <annotation>
