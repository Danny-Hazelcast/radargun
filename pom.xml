<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
   <modelVersion>4.0.0</modelVersion>

   <artifactId>cache-benchmark-aggregator</artifactId>
   <version>1.0.0-SNAPSHOT</version>
   <groupId>org.cachebench</groupId>
   <name>Cache Benchmark Framework - Aggregator</name>
   <description>The aggregator for the cache benchmark framework</description>
   <packaging>pom</packaging>

   <modules>
      <module>framework</module>
      <module>plugins/infinispan4</module>
      <module>plugins/jbosscache2</module>
      <module>plugins/jbosscache3</module>
      <module>plugins/ehcache15</module>
      <module>plugins/ehcache16</module>
   </modules>

   <build>
      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <version>1.3</version>
            <executions>
               <execution>
                  <id>build_distro</id>
                  <phase>install</phase>
                  <goals>
                     <goal>run</goal>
                  </goals>
                  <configuration>
                     <tasks>
                        <property name="out" value="target/distribution/CacheBenchFwk-1.0.0-SNAPSHOT" />
                        <property name="zipfile" value="target/distribution/CacheBenchFwk-1.0.0-SNAPSHOT.zip" />
                        <delete dir="target/distribution" />
                        <mkdir dir="target/distribution" />
                        <mkdir dir="${out}" />

                        <copy todir="${out}">
                           <fileset dir="framework/target/distribution/cache-benchmark-framework-bin/cache-benchmark-framework">
                              <include name="**/*" />
                           </fileset>
                        </copy>

                        <copy todir="${out}/plugins/infinispan4">
                           <fileset dir="plugins/infinispan4/target/distribution/plugin-infinispan4-bin/plugin-infinispan4">
                              <include name="**/*" />
                           </fileset>
                        </copy>

                        <copy todir="${out}/plugins/jbosscache3">
                           <fileset dir="plugins/jbosscache3/target/distribution/plugin-jbosscache3-bin/plugin-jbosscache3">
                              <include name="**/*" />
                           </fileset>
                        </copy>

                        <copy todir="${out}/plugins/jbosscache2">
                           <fileset dir="plugins/jbosscache2/target/distribution/plugin-jbosscache2-bin/plugin-jbosscache2">
                              <include name="**/*" />
                           </fileset>
                        </copy>

                        <copy todir="${out}/plugins/ehcache15">
                           <fileset dir="plugins/ehcache15/target/distribution/plugin-ehcache15-bin/plugin-ehcache15">
                              <include name="**/*" />
                           </fileset>
                        </copy>

                        <copy todir="${out}/plugins/ehcache16">
                           <fileset dir="plugins/ehcache16/target/distribution/plugin-ehcache16-bin/plugin-ehcache16">
                              <include name="**/*" />
                           </fileset>
                        </copy>
			
                        <copy todir="${out}/bin">
                           <fileset dir="bin">
                              <include name="**/*" />
                           </fileset>
                        </copy>

                        <zip destfile="${zipfile}" basedir="${out}" />
                     </tasks>
                  </configuration>
               </execution>
            </executions>            
         </plugin>
      </plugins>
   </build>
</project>
