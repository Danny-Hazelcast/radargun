<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
   <modelVersion>4.0.0</modelVersion>

   <artifactId>cache-benchmark-aggregator</artifactId>
   <version>1.0.0-SNAPSHOT</version>
   <groupId>org.cachebench</groupId>
   <name>Cache Benchmark Framework - Aggregator</name>
   <description>The aggregator for the cache benchmark framework</description>
   <packaging>pom</packaging>

   <modules>
      <module>framework</module>
      <module>plugins/infinispan4</module>
      <module>plugins/jbosscache2</module>
      <module>plugins/jbosscache3</module>
      <module>plugins/ehcache16</module>
      <module>plugins/ehcache17</module>
      <module>plugins/terracotta3</module>
   </modules>

   <properties>
      <distribution.artifact>target/distribution/CacheBenchFwk-1.0.0-SNAPSHOT</distribution.artifact>
      <distribution.zipfile>target/distribution/CacheBenchFwk-1.0.0-SNAPSHOT.zip</distribution.zipfile>
   </properties>

   <profiles>
      <profile>
         <id>coherence</id>
         <activation>
            <activeByDefault>false</activeByDefault>
         </activation>
         <modules>
            <module>plugins/coherence3</module>
         </modules>
         <build>
            <plugins>
               <plugin>
                  <groupId>org.apache.maven.plugins</groupId>
                  <artifactId>maven-antrun-plugin</artifactId>
                  <version>1.3</version>
                  <executions>
                     <execution>
                        <id>prepare_coherence_plugin</id>
                        <phase>verify</phase>
                        <goals>
                           <goal>run</goal>
                        </goals>
                        <configuration>
                           <tasks>
                              <echo message="Packaging the coherence3 plugin"/>
                              <copy todir="${distribution.artifact}/plugins/coherence3">
                                 <fileset
                                       dir="plugins/coherence3/target/distribution/plugin-coherence3-bin/plugin-coherence3">
                                    <include name="**/*"/>
                                 </fileset>
                              </copy>
                           </tasks>
                        </configuration>
                     </execution>
                  </executions>
               </plugin>
            </plugins>
         </build>
      </profile>
   </profiles>

   <build>
      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <version>1.3</version>
            <executions>
               <execution>
                  <id>prepare_distribution</id>
                  <phase>post-integration-test</phase>
                  <goals>
                     <goal>run</goal>
                  </goals>
                  <configuration>
                     <tasks>
                        <delete dir="target/distribution"/>
                        <mkdir dir="target/distribution"/>
                        <mkdir dir="${distribution.artifact}"/>
                     </tasks>
                  </configuration>
               </execution>

               <execution>
                  <id>prepare_plugins</id>
                  <phase>verify</phase>
                  <goals>
                     <goal>run</goal>
                  </goals>
                  <configuration>
                     <tasks>
                        <echo message="Packaging the framework, and the following plugins: infinispan4, jbosscache2, jbosscache3, ehcache15 and ehcache16"/>

                        <copy todir="${distribution.artifact}/plugins/infinispan4">
                           <fileset
                                 dir="plugins/infinispan4/target/distribution/plugin-infinispan4-bin/plugin-infinispan4">
                              <include name="**/*"/>
                           </fileset>
                        </copy>

                        <copy todir="${distribution.artifact}/plugins/jbosscache3">
                           <fileset
                                 dir="plugins/jbosscache3/target/distribution/plugin-jbosscache3-bin/plugin-jbosscache3">
                              <include name="**/*"/>
                           </fileset>
                        </copy>

                        <copy todir="${distribution.artifact}/plugins/jbosscache2">
                           <fileset
                                 dir="plugins/jbosscache2/target/distribution/plugin-jbosscache2-bin/plugin-jbosscache2">
                              <include name="**/*"/>
                           </fileset>
                        </copy>

                        <copy todir="${distribution.artifact}/plugins/ehcache16">
                           <fileset dir="plugins/ehcache16/target/distribution/plugin-ehcache16-bin/plugin-ehcache16">
                              <include name="**/*"/>
                           </fileset>
                        </copy>

                        <copy todir="${distribution.artifact}/plugins/ehcache17">
                           <fileset dir="plugins/ehcache17/target/distribution/plugin-ehcache17-bin/plugin-ehcache17">
                              <include name="**/*"/>
                           </fileset>
                        </copy>                        

                        <copy todir="${distribution.artifact}/plugins/terracotta3">
                           <fileset dir="plugins/terracotta3/target/distribution/plugin-terracotta3-bin/plugin-terracotta3">
                              <include name="**/*"/>
                           </fileset>
                        </copy>
                     </tasks>
                  </configuration>
               </execution>

               <execution>
                  <id>build_distro</id>
                  <phase>install</phase>
                  <goals>
                     <goal>run</goal>
                  </goals>
                  <configuration>
                     <tasks>
                        <echo message="Packaging the framework, common scripts and building archive"/>
                        <copy todir="${distribution.artifact}">
                           <fileset
                                 dir="framework/target/distribution/cache-benchmark-framework-bin/cache-benchmark-framework">
                              <include name="**/*"/>
                           </fileset>
                        </copy>
                        <copy todir="${distribution.artifact}/bin">
                           <fileset dir="bin">
                              <include name="**/*"/>
                           </fileset>
                        </copy>
                        <chmod perm="ugo+rwx" type="file">
                           <fileset dir="${distribution.artifact}/bin">
                              <include name="**/*.sh"/>
                              <include name="**/*.py"/>
                           </fileset>
                        </chmod>
                        <zip destfile="${distribution.zipfile}" basedir="${distribution.artifact}"/>
                     </tasks>
                  </configuration>
               </execution>
            </executions>
         </plugin>
      </plugins>
   </build>
</project>
