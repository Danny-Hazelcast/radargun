<local-bench-config>

   <benchmark>
      <Warmup operationCount="100000"/>
      <PutGet numberOfRequestsPerThread="100000" opsCountStatusLog="10000" numOfThreads="5"/>
   </benchmark>

   <products>
      <infinispan4>
         <config name="local/repeatable-read.xml"/>
         <config name="local/read-committed.xml"/>
      </infinispan4>
      <jbosscache3>
         <config name="local/mvcc-repeatable-read.xml"/>
         <config name="local/mvcc-read-committed.xml"/>
      </jbosscache3>
   </products>


   <reports>
      <report name="repeatable-read">
         <item product="infinispan4" config="local/repeatable-read.xml"/>
         <item product="jbosscache3" config="local/mvcc-repeatable-read.xml"/>
      </report>
      <report name="read-committed">
         <item product="infinispan4" config="local/read-committed.xml"/>
         <item product="jbosscache3" config="local/mvcc-read-committed.xml"/>
      </report>
      <report name="all_included" includeAll="true"/>
   </reports>
</local-bench-config>
