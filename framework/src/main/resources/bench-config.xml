<?xml version="1.0" encoding="UTF-8"?>

<bench-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="urn:cachebenchfwk:config:1.0">
   <server bind="${cbf.bind.address}" port="${cbf.bind.port}" nodes="${cbf.numslaves}"/>
   <stages>
      <stage name="StartClusterStage" enabled="true">
         <property name="chacheWrapperClass" value="org.cachebench.cachewrappers.InfinispanWrapper"/>
         <property name="config" value="${cbf.plugin.configfile}" mapAggregator="wrapperStartupParams"/>
      </stage>
      <stage name="ClusterValidationStage">
         <property name="PartialReplication" value="true"/>
      </stage>
      <stage name="WarmupStage"/>
      <stage name="WebSessionBenchmarkStage">
         <property name="numberOfRequests" value="100000"/>
      </stage>
      <stage name="CsvReportGenerationStage"/>
      <stage name="BenchmarkFinishedStage"/>
   </stages>

</bench-config>