<bench-config>

   <master bindAddress="${127.0.0.1:bind.address}" port="2103"/>

   <benchmark initSize="2" maxSize="4" increment="1">
      <DestroyWrapper runOnAllSlaves="true"/>
      <StartCluster/>
      <ClusterValidation partialReplication="false"/>
      <Warmup operationCount="100000"/>
      <WebSessionBenchmark numberOfRequestsPerThread="50000" opsCountStatusLog="10000" numOfThreads="5"/>
      <CsvReportGeneration/>
   </benchmark>

   <products>
      <infinispan4>
         <config name="repl-async.xml"/>
         <config name="repl-sync.xml"/>
         <config name="dist-sync.xml"/>
         <config name="dist-async.xml"/>
         <config name="dist-sync-l1.xml"/>
         <config name="dist-async-l1.xml"/>
      </infinispan4>
      <jbosscache3>
         <config name="mvcc/mvcc-repl-sync.xml"/>
         <config name="mvcc/mvcc-repl-async.xml"/>
      </jbosscache3>
   </products>

   <reports>
      <report name="sync-repl">
         <item product="infinispan4" config="repl-sync.xml"/>
         <item product="jbosscache3" config="mvcc/mvcc-repl-sync.xml"/>
      </report>
      <report name="async-repl">
         <item product="infinispan4" config="repl-async.xml"/>
         <item product="jbosscache3" config="mvcc/mvcc-repl-async.xml"/>
      </report>
      <report name="dist">
         <item product="infinispan4" config="dist-*"/>
      </report>
      <report name="all_included" includeAll="true"/>
   </reports>

</bench-config>
