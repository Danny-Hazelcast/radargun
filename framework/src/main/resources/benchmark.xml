<bench-config>

   <master bindAddress="${127.0.0.1:bind.address}" port="2103"/>

   <benchmark initSize="2" maxSize="${8:slaves}" increment="1">
      <DestroyWrapper runOnAllSlaves="true"/>
      <StartCluster/>
      <ClusterValidation partialReplication="false"/>
      <Warmup operationCount="100000"/>
      <WebSessionBenchmark numberOfRequestsPerThread="50000" opsCountStatusLog="10000" numOfThreads="5"/>
      <CsvReportGeneration/>
   </benchmark>

   <products>
      <coherence3>
         <config name="replicated"/>
         <config name="distributed"/>
      </coherence3>
      <infinispan4>
         <config name="repl-sync.xml"/>
         <config name="dist-sync.xml"/>
      </infinispan4>
   </products>

   <reports>
      <report name="sync-repl">
         <item product="infinispan4" config="repl-sync.xml"/>
         <item product="coherence3" config="replicated"/>
      </report>
      <report name="sync-dist">
         <item product="infinispan4" config="dist-sync.xml"/>
         <item product="coherence3" config="distributed"/>
      </report>
      <report name="all_included" includeAll="true"/>
   </reports>

</bench-config>
